{
    "name": "moderate-nestjs",
    "version": "0.0.30-6",
    "description": "REST API Backend using NestJS, Prisma, PostgreSQL, and Docker",
    "author": "@hubts",
    "private": false,
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/hubts/moderate-nestjs.git"
    },
    "engines": {
        "node": ">=20"
    },
    "scripts": {
        "prepare": "husky install && yarn prisma:generate",
        "postinstall": "yarn prisma:generate",
        "prebuild": "rimraf dist && yarn prisma:generate",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/src/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest --passWithNoTests",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "#----------------SDK-----------------------#": "SDK",
        "sdk": "cd sdk && yarn publish && rm -rf dist",
        "sdk:link": "cd sdk && yarn build && yarn link && cd .. && yarn link $npm_package_name-sdk",
        "#----------------Docker--------------------#": "Docker",
        "git": "./script/git/skyrocket.sh",
        "deploy": "./script/docker/run.sh",
        "push": "./script/docker/build-and-push.sh",
        "pull": "./script/docker/pull-and-run.sh",
        "#----------------Prisma--------------------#": "Prisma",
        "prisma:generate": "prisma generate",
        "prisma:sync": "prisma generate && prisma db push",
        "prisma:seed": "prisma db seed",
        "prisma:migrate:create": "prisma migrate dev --create-only --name",
        "prisma:migrate:apply": "prisma migrate deploy"
    },
    "dependencies": {
        "@nestjs/axios": "^3.0.0",
        "@nestjs/common": "^10.2.7",
        "@nestjs/config": "^3.1.1",
        "@nestjs/core": "^10.2.7",
        "@nestjs/jwt": "^10.2.0",
        "@nestjs/passport": "^10.0.3",
        "@nestjs/platform-express": "^10.2.7",
        "@nestjs/schedule": "^4.0.0",
        "@nestjs/serve-static": "^4.0.2",
        "@nestjs/swagger": "^7.3.1",
        "@nestjs/terminus": "^10.1.1",
        "@nestjs/throttler": "^5.0.1",
        "@prisma/client": "^6.15.0",
        "axios": "^1.5.1",
        "bcryptjs": "^3.0.2",
        "body-parser": "^1.20.2",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "compression": "^1.7.4",
        "dayjs": "^1.11.13",
        "helmet": "^7.0.0",
        "morgan": "^1.10.0",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^7.2.0",
        "swagger-themes": "^1.4.3",
        "webpack": "^5.0.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^9.0.0",
        "@nestjs/schematics": "^9.0.0",
        "@nestjs/testing": "^10.2.7",
        "@types/compression": "^1.7.4",
        "@types/express": "^4.17.13",
        "@types/jest": "28.1.8",
        "@types/morgan": "^1.9.3",
        "@types/multer": "^1.4.12",
        "@types/node": "^16.0.0",
        "@types/passport-jwt": "^4.0.0",
        "@types/supertest": "^2.0.11",
        "@types/uuid": "^9.0.0",
        "@typescript-eslint/eslint-plugin": "^8.43.0",
        "@typescript-eslint/parser": "^8.43.0",
        "commitizen": "^4.2.6",
        "cz-emoji-conventional": "^1.0.1",
        "eslint": "^8.0.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^8.0.3",
        "jest": "28.1.3",
        "prettier": "^2.3.2",
        "prisma": "^6.15.0",
        "source-map-support": "^0.5.20",
        "supertest": "^6.1.3",
        "ts-jest": "28.0.8",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.0.0",
        "tsconfig-paths": "4.1.0",
        "typescript": "^5.9.2"
    },
    "config": {
        "commitizen": {
            "path": "cz-emoji-conventional",
            "disableScopeLowerCase": true,
            "disableSubjectLowerCase": true
        }
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": ".",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node",
        "moduleNameMapper": {
            "^src/(.*)$": "<rootDir>/src/$1"
        }
    },
    "prisma": {
        "schema": "prisma/schema",
        "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
    }
}
